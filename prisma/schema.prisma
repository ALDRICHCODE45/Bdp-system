generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ColaboradorEstado {
  CONTRATADO
  DESPEDIDO
}

enum ClienteProveedorTipo {
  CLIENTE
  PROVEEDOR
}

enum EgresoClasificacion {
  GASTO_OP
  HONORARIOS
  SERVICIOS
  ARRENDAMIENTO
  COMISIONES
  DISPOSICION
}

enum EgresoCategoria {
  FACTURACION
  COMISIONES
  DISPOSICION
  BANCARIZACIONES
}

enum EgresoSolicitanteAutorizador {
  RJS
  RGZ
  CALFC
}

enum EgresoFormaPago {
  TRANSFERENCIA
  EFECTIVO
  CHEQUE
}

enum EgresoCargoAbono {
  BDP
  CALFC
  GLOBAL
  RJZ
  APP
}

enum EgresoEstado {
  PAGADO
  PENDIENTE
  CANCELADO
}

enum EgresoFacturadoPor {
  BDP
  CALFC
  GLOBAL
  RGZ
  RJS
  APP
}

model Socio {
  id                  String             @id @default(uuid())
  nombre              String
  email               String             @unique
  telefono            String?
  activo              Boolean            @default(true)
  fechaIngreso        DateTime           @default(now())
  departamento        String?
  numeroEmpleados     Int                @default(0)
  notas               String?
  colaboradores       Colaborador[]
  clientesProveedores ClienteProveedor[]
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt

  @@index([email])
  @@index([activo])
}

model Colaborador {
  id        String                 @id @default(uuid())
  name      String
  correo    String
  puesto    String
  status    ColaboradorEstado      @default(CONTRATADO)
  imss      Boolean                @default(true)
  socioId   String?
  socio     Socio?                 @relation(fields: [socioId], references: [id], onDelete: SetNull)
  banco     String
  clabe     String
  sueldo    Decimal                @db.Decimal(15, 3)
  activos   String[]
  historial ColaboradorHistorial[]
  createdAt DateTime               @default(now())
  updatedAt DateTime               @updatedAt

  @@index([socioId])
  @@index([status])
}

model ColaboradorHistorial {
  id            String      @id @default(uuid())
  colaboradorId String
  colaborador   Colaborador @relation(fields: [colaboradorId], references: [id], onDelete: Cascade)
  campo         String
  valorAnterior String?
  valorNuevo    String
  usuarioId     String?
  motivo        String?
  fechaCambio   DateTime    @default(now())

  @@index([colaboradorId])
  @@index([fechaCambio])
}

model EntradasSalidas {
  id              String    @id @default(uuid())
  visitante       String
  destinatario    String
  motivo          String
  telefono        String?
  correspondencia String?
  fecha           DateTime
  hora_entrada    DateTime
  hora_salida     DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  name      String
  password  String
  roles     UserRole[]
  isActive  Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Role {
  id          String           @id @default(uuid())
  name        String           @unique
  users       UserRole[]
  permissions RolePermission[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model Permission {
  id          String           @id @default(uuid())
  name        String           @unique
  resource    String
  action      String
  description String?
  roles       RolePermission[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([resource])
  @@index([name])
}

model RolePermission {
  id           String     @id @default(uuid())
  roleId       String
  permissionId String
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())

  @@unique([roleId, permissionId])
  @@index([roleId])
  @@index([permissionId])
}

model UserRole {
  id        String   @id @default(uuid())
  userId    String
  roleId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, roleId])
  @@index([userId])
  @@index([roleId])
}

model ClienteProveedor {
  id                      String               @id @default(uuid())
  nombre                  String
  rfc                     String
  tipo                    ClienteProveedorTipo
  direccion               String
  telefono                String
  email                   String
  contacto                String
  numeroCuenta            String?
  clabe                   String?
  banco                   String?
  activo                  Boolean              @default(true)
  fechaRegistro           DateTime             @default(now())
  notas                   String?
  socioId                 String?
  socio                   Socio?               @relation(fields: [socioId], references: [id], onDelete: SetNull)
  egresosComoProveedor    Egreso[]             @relation("EgresoProveedor")
  egresosComoClienteProye Egreso[]             @relation("EgresoClienteProyecto")
  ingresosComoCliente     Ingreso[]            @relation("IngresoCliente")
  facturas                Factura[]
  createdAt               DateTime             @default(now())
  updatedAt               DateTime             @updatedAt

  @@unique([rfc, tipo])
  @@index([activo])
  @@index([socioId])
}

model Egreso {
  id                 String                       @id @default(uuid())
  concepto           String
  clasificacion      EgresoClasificacion
  categoria          EgresoCategoria
  proveedor          String
  proveedorId        String
  proveedorRef       ClienteProveedor             @relation("EgresoProveedor", fields: [proveedorId], references: [id], onDelete: Restrict)
  solicitante        EgresoSolicitanteAutorizador
  autorizador        EgresoSolicitanteAutorizador
  numeroFactura      String
  folioFiscal        String
  periodo            String
  formaPago          EgresoFormaPago
  origen             String
  numeroCuenta       String
  clabe              String
  cargoAbono         EgresoCargoAbono
  cantidad           Decimal                      @db.Decimal(15, 2)
  estado             EgresoEstado
  fechaPago          DateTime?
  fechaRegistro      DateTime                     @default(now())
  facturadoPor       EgresoFacturadoPor
  clienteProyecto    String
  clienteProyectoId  String
  clienteProyectoRef ClienteProveedor             @relation("EgresoClienteProyecto", fields: [clienteProyectoId], references: [id], onDelete: Restrict)
  facturaId          String?
  notas              String?
  createdAt          DateTime                     @default(now())
  updatedAt          DateTime                     @updatedAt

  @@index([estado])
  @@index([periodo])
  @@index([proveedorId])
  @@index([clienteProyectoId])
  @@index([fechaPago])
  @@index([createdAt])
}

enum IngresoFormaPago {
  TRANSFERENCIA
  EFECTIVO
  CHEQUE
}

enum IngresoEstado {
  PAGADO
  PENDIENTE
  CANCELADO
}

enum IngresoSolicitanteAutorizador {
  RJS
  RGZ
  CALFC
}

enum IngresoCargoAbono {
  BDP
  CALFC
}

enum IngresoFacturadoPor {
  BDP
  CALFC
  GLOBAL
  RGZ
  RJS
  APP
}

enum FacturaTipoOrigen {
  INGRESO
  EGRESO
}

enum FacturaEstado {
  BORRADOR
  ENVIADA
  PAGADA
  CANCELADA
}

enum FacturaFormaPago {
  TRANSFERENCIA
  EFECTIVO
  CHEQUE
}

model Ingreso {
  id                 String                        @id @default(uuid())
  concepto           String
  cliente            String
  clienteId          String
  clienteRef         ClienteProveedor              @relation("IngresoCliente", fields: [clienteId], references: [id], onDelete: Restrict)
  solicitante        IngresoSolicitanteAutorizador
  autorizador        IngresoSolicitanteAutorizador
  numeroFactura      String
  folioFiscal        String                        @unique
  periodo            String
  formaPago          IngresoFormaPago
  origen             String
  numeroCuenta       String
  clabe              String
  cargoAbono         IngresoCargoAbono
  cantidad           Decimal                       @db.Decimal(15, 2)
  estado             IngresoEstado
  fechaPago          DateTime?
  fechaRegistro      DateTime                      @default(now())
  facturadoPor       IngresoFacturadoPor
  clienteProyecto    String
  fechaParticipacion DateTime?
  facturaId          String?
  notas              String?
  createdAt          DateTime                      @default(now())
  updatedAt          DateTime                      @updatedAt

  @@index([estado])
  @@index([periodo])
  @@index([clienteId])
  @@index([fechaPago])
  @@index([createdAt])
}

model Factura {
  id                  String            @id @default(uuid())
  tipoOrigen          FacturaTipoOrigen
  origenId            String
  clienteProveedorId  String
  clienteProveedorRef ClienteProveedor  @relation(fields: [clienteProveedorId], references: [id], onDelete: Restrict)
  clienteProveedor    String
  concepto            String
  monto               Decimal           @db.Decimal(15, 2)
  periodo             String
  numeroFactura       String
  folioFiscal         String            @unique
  fechaEmision        DateTime
  fechaVencimiento    DateTime
  estado              FacturaEstado     @default(BORRADOR)
  formaPago           FacturaFormaPago
  rfcEmisor           String
  rfcReceptor         String
  direccionEmisor     String
  direccionReceptor   String
  fechaPago           DateTime?
  fechaRegistro       DateTime          @default(now())
  creadoPor           String
  autorizadoPor       String
  notas               String?
  archivoPdf          String?
  archivoXml          String?
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt

  @@index([tipoOrigen])
  @@index([origenId])
  @@index([estado])
  @@index([clienteProveedorId])
  @@index([fechaEmision])
}
