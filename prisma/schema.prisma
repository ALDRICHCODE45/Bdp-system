generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ColaboradorEstado {
  CONTRATADO
  DESPEDIDO
}

enum ClienteProveedorTipo {
  CLIENTE
  PROVEEDOR
}

model Socio {
  id                  String             @id @default(uuid())
  nombre              String
  email               String             @unique
  telefono            String?
  activo              Boolean            @default(true)
  fechaIngreso        DateTime           @default(now())
  departamento        String?
  numeroEmpleados     Int                @default(0)
  notas               String?
  colaboradores       Colaborador[]
  clientesProveedores ClienteProveedor[]
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt

  @@index([email])
  @@index([activo])
}

model Colaborador {
  id        String                 @id @default(uuid())
  name      String
  correo    String
  puesto    String
  status    ColaboradorEstado      @default(CONTRATADO)
  imss      Boolean                @default(true)
  socioId   String?
  socio     Socio?                 @relation(fields: [socioId], references: [id], onDelete: SetNull)
  banco     String
  clabe     String
  sueldo    Decimal                @db.Decimal(15, 3)
  activos   String[]
  historial ColaboradorHistorial[]
  createdAt DateTime               @default(now())
  updatedAt DateTime               @updatedAt

  @@index([socioId])
  @@index([status])
}

model ColaboradorHistorial {
  id            String      @id @default(uuid())
  colaboradorId String
  colaborador   Colaborador @relation(fields: [colaboradorId], references: [id], onDelete: Cascade)
  campo         String
  valorAnterior String?
  valorNuevo    String
  usuarioId     String?
  motivo        String?
  fechaCambio   DateTime    @default(now())

  @@index([colaboradorId])
  @@index([fechaCambio])
}

model EntradasSalidas {
  id              String    @id @default(uuid())
  visitante       String
  destinatario    String
  motivo          String
  telefono        String?
  correspondencia String?
  fecha           DateTime
  hora_entrada    DateTime
  hora_salida     DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  name      String
  password  String
  roles     UserRole[]
  isActive  Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Role {
  id          String           @id @default(uuid())
  name        String           @unique
  users       UserRole[]
  permissions RolePermission[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model Permission {
  id          String           @id @default(uuid())
  name        String           @unique
  resource    String
  action      String
  description String?
  roles       RolePermission[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([resource])
  @@index([name])
}

model RolePermission {
  id           String     @id @default(uuid())
  roleId       String
  permissionId String
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())

  @@unique([roleId, permissionId])
  @@index([roleId])
  @@index([permissionId])
}

model UserRole {
  id        String   @id @default(uuid())
  userId    String
  roleId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, roleId])
  @@index([userId])
  @@index([roleId])
}

model ClienteProveedor {
  id            String               @id @default(uuid())
  nombre        String
  rfc           String
  tipo          ClienteProveedorTipo
  direccion     String
  telefono      String
  email         String
  contacto      String
  numeroCuenta  String?
  clabe         String?
  banco         String?
  activo        Boolean              @default(true)
  fechaRegistro DateTime             @default(now())
  notas         String?
  socioId       String?
  socio         Socio?               @relation(fields: [socioId], references: [id], onDelete: SetNull)
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt

  @@unique([rfc, tipo])
  @@index([activo])
  @@index([socioId])
}
