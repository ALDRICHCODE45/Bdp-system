generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ColaboradorEstado {
  CONTRATADO
  DESPEDIDO
}

enum ClienteProveedorTipo {
  CLIENTE
  PROVEEDOR
}

enum EgresoClasificacion {
  GASTO_OP
  HONORARIOS
  SERVICIOS
  ARRENDAMIENTO
  COMISIONES
  DISPOSICION
}

enum EgresoCategoria {
  FACTURACION
  COMISIONES
  DISPOSICION
  BANCARIZACIONES
}

enum EgresoFormaPago {
  TRANSFERENCIA
  EFECTIVO
  CHEQUE
}

enum EgresoCargoAbono {
  BDP
  CALFC
  GLOBAL
  RJZ
  APP
}

enum EgresoEstado {
  PAGADO
  PENDIENTE
  CANCELADO
}

enum EgresoFacturadoPor {
  BDP
  CALFC
  GLOBAL
  RGZ
  RJS
  APP
}

model Socio {
  id                      String             @id @default(uuid())
  nombre                  String
  email                   String             @unique
  telefono                String?
  activo                  Boolean            @default(true)
  fechaIngreso            DateTime           @default(now())
  departamento            String?
  numeroEmpleados         Int                @default(0)
  notas                   String?
  colaboradores           Colaborador[]
  clientesProveedores     ClienteProveedor[]
  egresosComSolicitante   Egreso[]           @relation("EgresoSolicitante")
  egresosComoAutorizador  Egreso[]           @relation("EgresoAutorizador")
  ingresosComSolicitante  Ingreso[]          @relation("IngresoSolicitante")
  ingresosComoAutorizador Ingreso[]          @relation("IngresoAutorizador")
  facturasComoCreador     Factura[]          @relation("FacturaCreador")
  facturasComoAutorizador Factura[]          @relation("FacturaAutorizador")
  createdAt               DateTime           @default(now())
  updatedAt               DateTime           @updatedAt

  @@index([email])
  @@index([activo])
}

model Colaborador {
  id                           String                 @id @default(uuid())
  name                         String
  correo                       String                 @unique
  puesto                       String
  status                       ColaboradorEstado      @default(CONTRATADO)
  imss                         Boolean                @default(true)
  socioId                      String?
  socio                        Socio?                 @relation(fields: [socioId], references: [id], onDelete: SetNull)
  // Datos personales
  fechaIngreso                 DateTime               @default(now())
  genero                       String?
  fechaNacimiento              DateTime?
  nacionalidad                 String?
  estadoCivil                  String?
  tipoSangre                   String?
  // Contacto y dirección
  direccion                    String?
  telefono                     String?
  // Datos fiscales
  rfc                          String?
  curp                         String?
  // Académicos y laborales previos
  ultimoGradoEstudios          String?
  escuela                      String?
  ultimoTrabajo                String?
  // Referencias personales
  nombreReferenciaPersonal     String?
  telefonoReferenciaPersonal   String?
  parentescoReferenciaPersonal String?
  // Referencias laborales
  nombreReferenciaLaboral      String?
  telefonoReferenciaLaboral    String?
  // Datos financieros actuales
  banco                        String
  clabe                        String
  sueldo                       Decimal                @db.Decimal(15, 3)
  activos                      String[]
  historial                    ColaboradorHistorial[]
  createdAt                    DateTime               @default(now())
  updatedAt                    DateTime               @updatedAt
  asistencias                  Asistencia[]

  @@index([socioId])
  @@index([status])
}

model ColaboradorHistorial {
  id            String      @id @default(uuid())
  colaboradorId String
  colaborador   Colaborador @relation(fields: [colaboradorId], references: [id], onDelete: Cascade)
  campo         String
  valorAnterior String?
  valorNuevo    String
  usuarioId     String?
  motivo        String?
  fechaCambio   DateTime    @default(now())

  @@index([colaboradorId])
  @@index([fechaCambio])
}

model ClienteProveedorHistorial {
  id                 String           @id @default(uuid())
  clienteProveedorId String
  clienteProveedor   ClienteProveedor @relation(fields: [clienteProveedorId], references: [id], onDelete: Cascade)
  campo              String
  valorAnterior      String?
  valorNuevo         String
  usuarioId          String?
  motivo             String?
  fechaCambio        DateTime         @default(now())

  @@index([clienteProveedorId])
  @@index([fechaCambio])
}

model EntradasSalidas {
  id              String    @id @default(uuid())
  visitante       String
  destinatario    String
  motivo          String
  telefono        String?
  correspondencia String?
  fecha           DateTime
  hora_entrada    DateTime
  hora_salida     DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([fecha])
  @@index([createdAt])
}

model User {
  id                         String             @id @default(uuid())
  email                      String             @unique
  name                       String
  password                   String
  roles                      UserRole[]
  isActive                   Boolean            @default(true)
  createdAt                  DateTime           @default(now())
  updatedAt                  DateTime           @updatedAt
  clientesProveedoresCreados ClienteProveedor[] @relation("ClienteProveedorIngresadoPor")
  egresosCreados             Egreso[]           @relation("EgresoIngresadoPor")
  ingresosCreados            Ingreso[]          @relation("IngresoIngresadoPor")
  facturasCreadas            Factura[]          @relation("FacturaIngresadoPor")
}

model Role {
  id          String           @id @default(uuid())
  name        String           @unique
  users       UserRole[]
  permissions RolePermission[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model Permission {
  id          String           @id @default(uuid())
  name        String           @unique
  resource    String
  action      String
  description String?
  roles       RolePermission[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([resource])
  @@index([name])
}

model RolePermission {
  id           String     @id @default(uuid())
  roleId       String
  permissionId String
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())

  @@unique([roleId, permissionId])
  @@index([roleId])
  @@index([permissionId])
}

model UserRole {
  id        String   @id @default(uuid())
  userId    String
  roleId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, roleId])
  @@index([userId])
  @@index([roleId])
}

model ClienteProveedor {
  id                      String                      @id @default(uuid())
  nombre                  String
  rfc                     String
  tipo                    ClienteProveedorTipo
  direccion               String
  telefono                String
  email                   String
  contacto                String
  numeroCuenta            String?
  clabe                   String?
  banco                   String?
  activo                  Boolean                     @default(true)
  fechaRegistro           DateTime                    @default(now())
  notas                   String?
  socioId                 String?
  socio                   Socio?                      @relation(fields: [socioId], references: [id], onDelete: SetNull)
  ingresadoPor            String?
  ingresadoPorRef         User?                       @relation("ClienteProveedorIngresadoPor", fields: [ingresadoPor], references: [id], onDelete: SetNull)
  egresosComoProveedor    Egreso[]                    @relation("EgresoProveedor")
  egresosComoClienteProye Egreso[]                    @relation("EgresoClienteProyecto")
  ingresosComoCliente     Ingreso[]                   @relation("IngresoCliente")
  facturas                Factura[]
  historial               ClienteProveedorHistorial[]
  createdAt               DateTime                    @default(now())
  updatedAt               DateTime                    @updatedAt

  @@unique([rfc, tipo])
  @@index([activo])
  @@index([socioId])
  @@index([ingresadoPor])
}

model Egreso {
  id                 String              @id @default(uuid())
  concepto           String
  clasificacion      EgresoClasificacion
  categoria          EgresoCategoria
  proveedor          String
  proveedorId        String
  proveedorRef       ClienteProveedor    @relation("EgresoProveedor", fields: [proveedorId], references: [id], onDelete: Restrict)
  solicitanteId      String?
  solicitanteRef     Socio?              @relation("EgresoSolicitante", fields: [solicitanteId], references: [id], onDelete: Restrict)
  autorizadorId      String?
  autorizadorRef     Socio?              @relation("EgresoAutorizador", fields: [autorizadorId], references: [id], onDelete: Restrict)
  numeroFactura      String
  folioFiscal        String
  periodo            String
  formaPago          EgresoFormaPago
  origen             String
  numeroCuenta       String
  clabe              String
  cargoAbono         EgresoCargoAbono
  cantidad           Decimal             @db.Decimal(15, 2)
  estado             EgresoEstado
  fechaPago          DateTime?
  fechaRegistro      DateTime            @default(now())
  facturadoPor       EgresoFacturadoPor
  clienteProyecto    String?
  clienteProyectoId  String?
  clienteProyectoRef ClienteProveedor?   @relation("EgresoClienteProyecto", fields: [clienteProyectoId], references: [id], onDelete: Restrict)
  facturaId          String?
  notas              String?
  ingresadoPor       String?
  ingresadoPorRef    User?               @relation("EgresoIngresadoPor", fields: [ingresadoPor], references: [id], onDelete: SetNull)
  historial          EgresoHistorial[]
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt

  @@index([estado])
  @@index([periodo])
  @@index([proveedorId])
  @@index([clienteProyectoId])
  @@index([fechaPago])
  @@index([createdAt])
  @@index([ingresadoPor])
  @@index([solicitanteId])
  @@index([autorizadorId])
}

model EgresoHistorial {
  id            String   @id @default(uuid())
  egresoId      String
  egreso        Egreso   @relation(fields: [egresoId], references: [id], onDelete: Cascade)
  campo         String
  valorAnterior String?
  valorNuevo    String
  usuarioId     String?
  motivo        String?
  fechaCambio   DateTime @default(now())

  @@index([egresoId])
  @@index([fechaCambio])
}

enum IngresoFormaPago {
  TRANSFERENCIA
  EFECTIVO
  CHEQUE
}

enum IngresoEstado {
  PAGADO
  PENDIENTE
  CANCELADO
}

enum IngresoCargoAbono {
  BDP
  CALFC
}

enum IngresoFacturadoPor {
  BDP
  CALFC
  GLOBAL
  RGZ
  RJS
  APP
}

enum FacturaTipoOrigen {
  INGRESO
  EGRESO
}

enum FacturaEstado {
  BORRADOR
  ENVIADA
  PAGADA
  CANCELADA
}

enum FacturaFormaPago {
  TRANSFERENCIA
  EFECTIVO
  CHEQUE
}

enum FileAttachmentEntityType {
  FACTURA
  EGRESO
  INGRESO
  CLIENTE_PROVEEDOR
}

model Ingreso {
  id                 String              @id @default(uuid())
  concepto           String
  cliente            String
  clienteId          String
  clienteRef         ClienteProveedor    @relation("IngresoCliente", fields: [clienteId], references: [id], onDelete: Restrict)
  solicitanteId      String?
  solicitanteRef     Socio?              @relation("IngresoSolicitante", fields: [solicitanteId], references: [id], onDelete: Restrict)
  autorizadorId      String?
  autorizadorRef     Socio?              @relation("IngresoAutorizador", fields: [autorizadorId], references: [id], onDelete: Restrict)
  numeroFactura      String
  folioFiscal        String              @unique
  periodo            String
  formaPago          IngresoFormaPago
  origen             String
  numeroCuenta       String
  clabe              String
  cargoAbono         IngresoCargoAbono
  cantidad           Decimal             @db.Decimal(15, 2)
  estado             IngresoEstado
  fechaPago          DateTime?
  fechaRegistro      DateTime            @default(now())
  facturadoPor       IngresoFacturadoPor
  clienteProyecto    String
  fechaParticipacion DateTime?
  facturaId          String?
  notas              String?
  ingresadoPor       String?
  ingresadoPorRef    User?               @relation("IngresoIngresadoPor", fields: [ingresadoPor], references: [id], onDelete: SetNull)
  historial          IngresoHistorial[]
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt

  @@index([estado])
  @@index([periodo])
  @@index([clienteId])
  @@index([fechaPago])
  @@index([createdAt])
  @@index([ingresadoPor])
  @@index([solicitanteId])
  @@index([autorizadorId])
}

model IngresoHistorial {
  id            String   @id @default(uuid())
  ingresoId     String
  ingreso       Ingreso  @relation(fields: [ingresoId], references: [id], onDelete: Cascade)
  campo         String
  valorAnterior String?
  valorNuevo    String
  usuarioId     String?
  motivo        String?
  fechaCambio   DateTime @default(now())

  @@index([ingresoId])
  @@index([fechaCambio])
}

model Factura {
  id                  String             @id @default(uuid())
  tipoOrigen          FacturaTipoOrigen?
  origenId            String?
  clienteProveedorId  String
  clienteProveedorRef ClienteProveedor   @relation(fields: [clienteProveedorId], references: [id], onDelete: Restrict)
  clienteProveedor    String
  concepto            String
  monto               Decimal            @db.Decimal(15, 2)
  periodo             String
  numeroFactura       String
  folioFiscal         String             @unique
  fechaEmision        DateTime
  fechaVencimiento    DateTime
  estado              FacturaEstado      @default(BORRADOR)
  formaPago           FacturaFormaPago
  rfcEmisor           String
  rfcReceptor         String
  direccionEmisor     String
  direccionReceptor   String
  numeroCuenta        String
  clabe               String
  banco               String
  fechaPago           DateTime?
  fechaRegistro       DateTime           @default(now())
  creadoPorId         String?
  creadoPorRef        Socio?             @relation("FacturaCreador", fields: [creadoPorId], references: [id], onDelete: Restrict)
  autorizadoPorId     String?
  autorizadoPorRef    Socio?             @relation("FacturaAutorizador", fields: [autorizadoPorId], references: [id], onDelete: Restrict)
  notas               String?
  ingresadoPor        String?
  ingresadoPorRef     User?              @relation("FacturaIngresadoPor", fields: [ingresadoPor], references: [id], onDelete: SetNull)
  historial           FacturaHistorial[]
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt

  @@index([tipoOrigen])
  @@index([origenId])
  @@index([estado])
  @@index([clienteProveedorId])
  @@index([fechaEmision])
  @@index([ingresadoPor])
  @@index([creadoPorId])
  @@index([autorizadoPorId])
}

model FacturaHistorial {
  id            String   @id @default(uuid())
  facturaId     String
  factura       Factura  @relation(fields: [facturaId], references: [id], onDelete: Cascade)
  campo         String
  valorAnterior String?
  valorNuevo    String
  usuarioId     String?
  motivo        String?
  fechaCambio   DateTime @default(now())

  @@index([facturaId])
  @@index([fechaCambio])
}

model Empresa {
  id              String  @id @default(uuid())
  // Datos básicos
  razonSocial     String?
  nombreComercial String?
  rfc             String? @unique
  curp            String?
  // Dirección fiscal
  direccionFiscal String?
  colonia         String?
  ciudad          String?
  estado          String?
  codigoPostal    String?
  pais            String  @default("México")

  // Datos bancarios principales (targeta de credito o debito)
  bancoPrincipal           String?
  nombreEnTarjetaPrincipal String?
  numeroCuentaPrincipal    String?
  clabePrincipal           String?
  fechaExpiracionPrincipal DateTime?
  cvvPrincipal             Int?

  // Datos bancarios secundarios (opcional, targeta de credito o debito)
  bancoSecundario           String?
  nombreEnTarjetaSecundario String?
  numeroCuentaSecundario    String?
  clabeSecundaria           String?
  fechaExpiracionSecundaria DateTime?
  cvvSecundario             Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([rfc])
}

model FileAttachment {
  id         String                   @id @default(uuid())
  fileName   String
  fileUrl    String
  fileSize   Int
  mimeType   String
  entityType FileAttachmentEntityType
  entityId   String
  uploadedBy String?
  createdAt  DateTime                 @default(now())
  updatedAt  DateTime                 @updatedAt

  @@index([entityType, entityId])
  @@index([entityId])
}

enum AsistenciaTipo {
  Entrada
  Salida
}

model Asistencia {
  id          String         @id @default(uuid())
  tipo        AsistenciaTipo
  fecha       DateTime
  correo      String
  colaborador Colaborador    @relation(fields: [correo], references: [correo], onDelete: Cascade)

  @@index([correo])
  @@index([fecha])
  @@index([tipo])
}
